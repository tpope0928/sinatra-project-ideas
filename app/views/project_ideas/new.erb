<h2>Submit a Project Idea </h2>

<form class="" action="/project_ideas" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title">
  <label for="name">Content:</label>
  <input type="text" name="content">

  <label for="claim">Claim this Idea?</label>
  <input type="checkbox" name="claimed" value="#{@claimed}" checked="@project_ideas.claimed">

  <input type="submit" name="" value="Submit Idea">
</form>
